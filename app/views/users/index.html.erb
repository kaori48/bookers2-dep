<%= render "layouts/header" %>
<div class="container">
<%= render "layouts/error", book_new: @book_new %>
<div class="row">
<div class="col-xs-3">
<%= render "layouts/side", book_new: @book_new, user: @user %>
</div>
<!--ユーザ-ー-一覧  -->
<div class="col-xs-9">
	<h2>Users</h2>
<div class="conrainer">
 <div class="row">
	<table class="table table-hover table-inverse table-striped">
		<thead>
           <tr>
           	 	<th>image</th>
           	 	<th>name</th>
           </tr>
		</thead>
		<tbody><!--全ユーザー一覧-->
			<% @users.each do |user|%><!--ユーザーのイメージ, その人の投稿一覧-->
			<tr>
				<td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "sample.jpg" %></td>
				<td><p class="text-left"><%= user.name %></p></td><!--name -->
				<td><p class="text-left"><%= link_to "Show", user_path(user.id) %></p></td><!--showボタンで(そのidの投稿一覧 -->
			</tr>
			<% end %>
		</tbody>
	</table>
  </div>
 </div>
 </div>
  </div>
 </div>
<%= render "layouts/footer" %>